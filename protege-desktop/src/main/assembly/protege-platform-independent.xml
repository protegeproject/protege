<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.2.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/2.2.0 http://maven.apache.org/xsd/assembly-2.2.0.xsd">

    <id>platform-independent</id>
    <formats>
        <format>dir</format>
        <format>zip</format>
    </formats>
    <baseDirectory>Protege-${project.version}</baseDirectory>


    <componentDescriptors>
        <componentDescriptor>src/main/assembly/file-sets.xml</componentDescriptor>
        <componentDescriptor>src/main/assembly/dependency-sets.xml</componentDescriptor>
    </componentDescriptors>

    <fileSets>
        <fileSet>
            <directory>src/main/env/platform-independent</directory>
            <outputDirectory>.</outputDirectory>
            <fileMode>0755</fileMode>
            <directoryMode>0755</directoryMode>
            <filtered>true</filtered>
        </fileSet>
    </fileSets>

</assembly>
